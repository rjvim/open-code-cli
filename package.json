{
  "name": "open-code-cli",
  "version": "0.1.0",
  "description": "CLI tool for synchronizing and contributing to component-based codebases",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "open-code": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "start": "node dist/index.js",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "prompts": "^2.4.2",
    "zod": "^3.22.4",
    "fs-extra": "^11.2.0",
    "simple-git": "^3.22.0",
    "octokit": "^3.1.2",
    "ora": "^8.0.1",
    "kleur": "^4.1.5",
    "fast-glob": "^3.3.2",
    "execa": "^8.0.1",
    "diff": "^5.1.0",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "@types/diff": "^5.0.9",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.5",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "prettier": "^3.2.4",
    "msw": "^2.1.3"
  }
}
